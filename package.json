{
  "private": true,
  "scripts": {
    "clean:lerna": "lerna clean",
    "clean:node_modules": "find . \\( -name 'node_modules' -or -name 'yarn.lock' -or -name 'yarn-error.log' \\) -prune -exec rm -rf '{}' +",
    "clean": "rm -f lerna-debug.log && lerna run clean",
    "clean:all": "yarn clean && yarn clean:lerna && yarn clean:node_modules",
    "tsc": "lerna run tsc",
    "build": "lerna run build",
    "dist": "lerna run dist",
    "prepublishOnly": "lerna run prepublishOnly",
    "test": "lerna run test --stream",
    "test:e2e": "lerna run test:e2e --stream --concurrency 1",
    "test:coverage": "lerna run test:coverage --stream",
    "format": "prettier --write \"**/*\"",
    "eslint": "eslint . '**/*.{js,jsx,ts,tsx}'",
    "stylelint": "stylelint '**/*.scss'",
    "lint": "run-p eslint tslint:* stylelint",
    "tslint:js": "find . -type f \\( -name '*.js' -or -name '*.jsx' \\) -not -path '*/node_modules/*' -not -path '*/build/*' -not -path '*/dist/*' -not -path '*/lib/*' -not -path '*/lib-es5/*' -not -path '*/coverage/*' -print -exec tslint --config tslint.json '{}' \\;",
    "tslint:tsconfig": "find . -type f -name 'tsconfig.json' -not -path '*/node_modules/*' -not -path '*/build/*' -not -path '*/dist/*' -not -path '*/lib/*' -not -path '*/lib-es5/*' -not -path '*/coverage/*' -print -exec tslint --config tslint.json --project '{}' \\;",
    "precommit": "yarn build && run-p tsc lint format",
    "prepush": "yarn precommit && run-p test test:e2e",
    "publish:lerna": "lerna publish --dist-tag next --no-git-tag-version --no-push --registry=https://registry.npmjs.org # Custom example: 0.8.0-beta.1",
    "upgrade:all": "find . -type f -name 'package.json' -not -path './.git/*' -not -path '*/node_modules/*' -execdir ncu --upgrade \\;"
  },
  "workspaces": [
    "packages/*",
    "examples/Bootstrap4",
    "examples/ClubMembers",
    "examples/HTML5ConstraintValidationAPI",
    "examples/MaterialUI",
    "examples/Password",
    "examples/PasswordWithoutState",
    "examples/PlainOldReact",
    "examples/ServerSideRendering",
    "examples/SignUp",
    "examples/WizardForm"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "npm-check-updates": "^3.1.23",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.8.2",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  }
}
